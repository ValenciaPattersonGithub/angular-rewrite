{
  "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "downlevelIteration": true,
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "es2020",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "angular",
            "jquery",
            "node",
            "jasmine",
            "jasminewd2"
        ], /* Type declaration files to be included in compilation. */
        "lib": [
            "es2018",
            "eS2020.Promise",
            "dom"
        ],
        "allowSyntheticDefaultImports": true
    }
}
